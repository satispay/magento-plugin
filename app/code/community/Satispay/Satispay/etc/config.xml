<?xml version="1.0"?>
<config>
  <modules>
    <Satispay_Satispay>
      <version>2.0.0</version>
    </Satispay_Satispay>
  </modules>
  <global>
    <helpers>
      <satispay>
        <class>Satispay_Satispay_Helper</class>
      </satispay>
    </helpers>
    <models>
      <satispay>
        <class>Satispay_Satispay_Model</class>
      </satispay>
    </models>
    <blocks>
      <satispay>
        <class>Satispay_Satispay_Block</class>
      </satispay>
    </blocks>
  </global>
  <frontend>
    <routers>
      <satispay>
        <use>standard</use>
        <args>
          <module>Satispay_Satispay</module>
          <frontName>satispay</frontName>
        </args>
      </satispay>
    </routers>
    <translate>
      <modules>
        <Satispay_Satispay>
          <files>
            <default>Satispay_Satispay.csv</default>
          </files>
        </Satispay_Satispay>
      </modules>
    </translate>
  </frontend>
  <default>
    <payment>
      <satispay>
        <title>Satispay</title>
        <!-- <order_status>pending_payment</order_status> -->
        <!-- <payment_action>sale</payment_action> -->
        <model>satispay/payment</model>
        <active>0</active>
      </satispay>
    </payment>
  </default>
  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <satispay after="Mage_Adminhtml">Satispay_Satispay</satispay>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>
  <adminhtml>
    <acl>
      <resources>
        <all>
          <title>Allow Everything</title>
        </all>
        <admin>
          <children>
            <system>
              <payment>
                <group>
                    <satispay>
                      <title>Satispay Settings</title>
                    </satispay>
                </group>
              </payment>
            </system>
          </children>
        </admin>
      </resources>
    </acl>
  </adminhtml>
 </config>
